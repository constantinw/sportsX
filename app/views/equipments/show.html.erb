<div class="container">
  <div class="equipment-card">
    <div class="equipment-img">
      <% if @equipment.photo.blank? %>
        <img src="https://www.decathlon.de/media/838/8385418/big_64b660c5-8c45-4199-9d0e-6c1b751917a0.jpg" width="500" alt="">
      <% else %>
        <%= cl_image_tag @equipment.photo, height: 300, width: 400, crop: :fill%>
      <% end %>
    </div>
    <div class="equipment-description">
      <h1 style="color: #FF5910;"><%= @equipment.category.capitalize %></h1>
      <hr>
      <p>brand: <%= @equipment.brand %></p>
      <p>product: <%= @equipment.product_name %></p>
      <p>size: <%= @equipment.size %></p>
      <p>location: <%= @equipment.location %></p>
      <p>price: <%= @equipment.price_per_day %> euro / day</p>
    </div>
    <div class="choose_date">
      <%= simple_form_for [@equipment, @booking], html: {class: 'from-horizontal'} do |f| %>
        <%= f.input :starts_at, as: :date, html5: true %>
        <%= f.input :ends_at, as: :date, html5: true %>
        <%= f.submit 'Reserve', class: 'btn btn-treehouse btn-equipment-reserve' %>
      <% end %>
    </div>
  </div>
  <%= link_to "Back to list", equipments_path, class: 'btn-treehouse' %>
  <br>
  <hr>
  <div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>"></div>
</div>



