<div class="box">
  <div class="box-left">
    <div class="title">
      <h2 class="orange-font">Add new stuff to rent out!</h2>
    </div>
    <div class="form form-card">
      <%= simple_form_for(@equipment) do |f| %>
      <%= f.input :category, :collection => [['Air',"Land"],['Land',"Land"],['Water',"Water"],['Groups',"Groups"]] %>
      <%= f.input :brand %>
      <%= f.input :product_name %>
      <%= f.input :size %>
      <%= f.input :location %>
      <%= f.input :price_per_day %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Add a equipment", class: "btn-equipment-add btn-treehouse btn-add" %>
      <% end %>
    </div>
  </div>
  <div class="box-right">
    <%= render 'shared/genericbanner' %>
  </div>
</div>
