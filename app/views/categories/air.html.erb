<div class="container">
  <br>
  <h1 style="color: #FF5910;">Air</h1>
  <p style="color: #FF5910;">Here is the list of the <strong>Air Sports Equipment</strong></p>
  <br>
  <div class="row" class="flex-item">
    <br>
    <div class="white-wrapper">
      <div class="container">
        <div class="row">
          <% @equipments.each do |equipment| %>
            <% if equipment.category == 'Air'  %>
              <div class="col-xs-12  col-sm-6 col-md-4">
                <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2));"><%= cl_image_tag equipment.photo , class: "img-tag-card" %>
                  <%= image_tag "avatars/johnsnow.jpg", :class => "card-user" %>
                  <div class="card-description">
                    <h2><%= equipment.product_name %></h2>
                    <p><%= equipment.location %></p>
                  </div>
                  <%=  link_to  "", equipment_path(equipment), class: 'card-link' %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<br> <br> <br> <br> <br>

<%= render 'shared/map' %>

<%= render 'shared/btn-rent-out' %>

<br> <br>
</div>
